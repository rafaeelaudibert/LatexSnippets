{
  "name": "latex-snippets",
  "version": "0.0.1",
  "description": "Website to host a project where you can store your custom latex formulas snippets",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:app start:functions",
    "start:app": "next",
    "start:functions": "netlify-lambda serve functions -c ./webpack.config.js",
    "build": "npm-run-all --parallel build:**",
    "build:app": "next build",
    "build:functions": "netlify-lambda build functions -c ./webpack.config.js",
    "export:app": "next export",
    "deploy:app": "npm run build:app && npm run export:app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaeelaudibert/latex-snippets.git"
  },
  "keywords": [
    "latex",
    "react",
    "next",
    "netlify",
    "graphql"
  ],
  "author": "Rafael B. Audibert",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rafaeelaudibert/latex-snippets/issues"
  },
  "homepage": "https://github.com/rafaeelaudibert/latex-snippets#readme",
  "dependencies": {
    "faunadb": "^2.13.1",
    "grommet": "^2.12.0",
    "next": "^9.3.4",
    "polished": "^3.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-rainbow-components": "^1.14.1",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "netlify-lambda": "^1.6.3",
    "npm-run-all": "^4.1.5"
  },
  "proxy": {
    "/.netlify/functions": {
      "target": "http://localhost:9000",
      "pathRewrite": {
        "^/\\.netlify/functions": ""
      }
    }
  }
}
